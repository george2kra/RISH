<p id="notice"><%= notice %></p>

<h1>Short listed Items</h1>
<%= form_tag bookings_path, method: "post" do %>
<fieldset>
<legend>Either Confirm or unconfirm items before hitting submit </legend>
  <button type="submit">Submit</button>
  <table>
    <thead>
      <tr>
        <th>Confirm</th>
        <th>Type</th>
        <th>Description</th>
        <th>item.cost</th>
        <th>Owner_firstname</th>
        <th>Owner_lastname</th>
      </tr>
    </thead>
      <tbody>
        <% @shortlist.each do |item| %>
          <tr>
            <td> <input type="checkbox" name="checked_confirm[]" value="<%= item.id %>" checked/> </td>
            <td><%= item.item_type %> </td>
            <td><%= item.description %> </td>
            <td><%= item.cost %> </td>
            <td><%= item.user.profile.first_name %> <%= item.user.id%> </td>
            <td><%= item.user.profile.last_name %>  <%= item.id%></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</fieldset>
<% end %>

<h1>Booking Confirmed</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Item</th>
      <th>From date</th>
      <th>To date</th>
      <th>Rent status</th>
      <th>created_ts</th>


    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.user.profile.last_name %></td>
        <td><%= booking.user.profile.first_name %></td>
        <td><%= booking.item.item_type %></td>
        <td><%= booking.from_date %></td>
        <td><%= booking.to_date %></td>
        <td><%= booking.rent_status %></td>
        <td><%= booking.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Booking', new_booking_path %>
